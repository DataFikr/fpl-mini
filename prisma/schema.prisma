generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Team {
  id          Int      @id @default(autoincrement())
  fplId       Int      @unique
  name        String
  managerName String
  crestUrl    String?
  lastUpdated DateTime @default(now()) @updatedAt
  
  gameweekData GameweekData[]
  leagueTeams  LeagueTeam[]
  
  @@map("teams")
}

model League {
  id              Int      @id @default(autoincrement())
  fplId           Int      @unique
  name            String
  currentGameweek Int      @default(1)
  lastUpdated     DateTime @default(now()) @updatedAt
  
  leagueTeams LeagueTeam[]
  
  @@map("leagues")
}

model LeagueTeam {
  id       Int @id @default(autoincrement())
  teamId   Int
  leagueId Int
  
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  
  @@unique([teamId, leagueId])
  @@map("league_teams")
}

model GameweekData {
  id          Int      @id @default(autoincrement())
  teamId      Int
  gameweek    Int
  points      Int
  rank        Int
  totalPoints Int
  squad       Json?    // Store squad data as JSON
  createdAt   DateTime @default(now())
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@unique([teamId, gameweek])
  @@map("gameweek_data")
}

model TeamCrest {
  id       Int      @id @default(autoincrement())
  teamName String   @unique
  crestUrl String
  createdAt DateTime @default(now())

  @@map("team_crests")
}

model NewsletterSubscription {
  id          Int      @id @default(autoincrement())
  email       String
  leagueId    Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  lastSentAt  DateTime?

  @@unique([email, leagueId])
  @@map("newsletter_subscriptions")
}
