{
  "name": "fpl-league-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=4096 && next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:smoke": "playwright test tests/e2e/home-page.spec.ts --project=chromium",
    "test:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:api": "playwright test tests/e2e/api-mocking.spec.ts",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:edge": "playwright test --project=\"Microsoft Edge\"",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:retry": "playwright test --retries=3",
    "test:trace": "playwright test --trace=on",
    "test:coverage": "playwright test --reporter=json --output-dir=tests/reports/coverage",
    "test:monitor": "node tests/utils/test-monitor.js",
    "test:analyze": "node -e \"require('./tests/utils/test-monitor.ts').testAnalytics.generateReport()\"",
    "test:clean": "rm -rf tests/test-results tests/screenshots/debug tests/reports",
    "test:install": "npx playwright install --with-deps",
    "test:doctor": "npx playwright install --dry-run && npm run test:smoke",
    "test:ci": "npm run test:clean && npm run test && npm run test:mobile && npm run test:accessibility",
    "test:full": "npm run test:clean && npm run test:ci && npm run test:visual && npm run test:performance",
    "performance:test": "node test-performance.js",
    "performance:monitor": "curl http://localhost:3000/api/performance?action=status",
    "performance:health": "curl http://localhost:3000/api/performance?action=health",
    "performance:cache": "curl http://localhost:3000/api/performance?action=cache",
    "performance:setup": "powershell -ExecutionPolicy Bypass -File setup-production.ps1"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "lucide-react": "^0.469.0",
    "next": "^15.5.2",
    "prisma": "^6.15.0",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.12.7",
    "redis": "^4.7.0",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "axios": "^1.12.2",
    "eslint": "^8",
    "eslint-config-next": "^15.5.2",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
